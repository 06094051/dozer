<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

  <configuration>
    <stop-on-errors>true</stop-on-errors>
    <wildcard>true</wildcard>
    <bean-factory>net.sf.dozer.functional_tests.support.SampleDefaultBeanFactory</bean-factory>
  </configuration>

  <!-- mapping level factory should override top level factory.  mapping level factory will get applied to both classes-->
  <mapping bean-factory="net.sf.dozer.functional_tests.support.SampleCustomBeanFactory">
    <class-a>net.sf.dozer.vo.TestObject</class-a>
    <class-b>net.sf.dozer.vo.TestObjectPrime</class-b>
    <field>
      <a>one</a>
      <b>onePrime</b>
    </field>
    <field>
      <a>three</a>
      <b>threePrime</b>
    </field>
    <field-exclude>
      <a>createdByFactoryName</a>
      <b>createdByFactoryName</b>
    </field-exclude>
  </mapping>

  <!-- class level factory should override top level and mapping level factory. -->
  <mapping>
    <class-a>net.sf.dozer.vo.InsideTestObject</class-a>
    <class-b bean-factory="net.sf.dozer.functional_tests.support.SampleCustomBeanFactory2"
      factory-bean-id="someBeanId">
      net.sf.dozer.vo.InsideTestObjectPrime
    </class-b>
    <field-exclude>
      <a>createdByFactoryName</a>
      <b>createdByFactoryName</b>
    </field-exclude>
  </mapping>

  <mapping>
    <class-a bean-factory="net.sf.dozer.functional_tests.support.SampleCustomBeanFactory3">
      net.sf.dozer.vo.MetalThingyIF
    </class-a>
    <class-b>net.sf.dozer.vo.Van</class-b>
  </mapping>


</mappings>