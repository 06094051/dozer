<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mappings PUBLIC "-//DOZER//DTD MAPPINGS//EN"
   "http://dozer.sourceforge.net/dtd/dozerbeanmapping.dtd">
<mappings>

  <configuration>
    <custom-converters>
      <converter type="net.sf.dozer.converters.CustomConverterParamConverter">
        <class-a>java.lang.String</class-a>
        <class-b>java.lang.String</class-b>
      </converter>
    </custom-converters>
  </configuration>

  <mapping wildcard="false">
    <class-a>net.sf.dozer.functional_tests.vo.SimpleObj</class-a>
    <class-b>net.sf.dozer.functional_tests.vo.AnotherTestObject</class-b>
    <field custom-converter="net.sf.dozer.converters.CustomConverterParamConverter" custom-converter-param="CustomConverterParamTest">
      <a>field1</a>
      <b>field3</b>
    </field>
  </mapping>

  <mapping map-id="1">
    <class-a>net.sf.dozer.functional_tests.vo.Individual</class-a>
    <class-b>net.sf.dozer.functional_tests.vo.Fruit</class-b>
    <field>
      <a>username</a>
      <b>name</b>
    </field>
  </mapping>

  <mapping map-id="2">
    <class-a>net.sf.dozer.functional_tests.vo.Individual</class-a>
    <class-b>net.sf.dozer.functional_tests.vo.Fruit</class-b>
    <field custom-converter-param="PARAM">
      <a>username</a>
      <b>name</b>
    </field>
  </mapping>


</mappings>
